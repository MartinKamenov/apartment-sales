head
	link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
	link(rel='stylesheet', href='/static/css/admin-login.css')
	link(href='http://fonts.googleapis.com/css?family=Varela+Round', rel='stylesheet', type='text/css')
	script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.13.1/jquery.validate.min.js')
	meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
	title
		| Имоти в Гърция
body
	.text-center(style='padding:50px 0')
		.logo login
		// Main Form
		.login-form-1
			form#login-form.text-left(action='/admin', method='post')
				.login-form-main-message
				.main-login-form
					.login-group
						.form-group
							label.sr-only(for='username') Username
							input#lg_username.form-control(type='text', name='username', placeholder='username')
						.form-group
							label.sr-only(for='password') Password
							input#lg_password.form-control(type='password', name='password', placeholder='password')
						// .form-group.login-group-checkbox
						// input#lg_remember(type='checkbox', name='lg_remember')
						// label(for='lg_remember') remember
					button.login-button(type='submit')
						i.fa.fa-chevron-right
	// end:Main Form
